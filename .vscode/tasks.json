{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "MapSys to DXF",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "windows": {
        "command": "${workspaceFolder}\\venv\\Scripts\\python.exe"
      },
      "args": [
        "mapsys",
        "--trace",
        "--log-file",
        "${workspaceFolder}/playground/mapsys-to-dxf.log",
        "to-dxf",
        "${input:src}",
        "--dxf",
        "${input:destination}",
        "--dxf-template",
        "${workspaceFolder}/playground/template.dxf",
        "--point-block",
        "PCT3D",
        "--point-name-attrib",
        "PTNAME",
        "--point-source-attrib",
        "SOURCE",
        "--point-z-attrib",
        "Z"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    },
    
    {
      "label": "All MapSys to DXF",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "windows": {
        "command": "${workspaceFolder}\\venv\\Scripts\\python.exe"
      },
      "args": [
        "mapsys",
        "--trace",
        "--log-file",
        "${workspaceFolder}/playground/mapsys-to-dxf.log",
        "to-dxf-dir",
        "${input:src}",
        "--dxf-template",
        "${workspaceFolder}/playground/template.dxf",
        "--point-block",
        "PCT3D",
        "--point-name-attrib",
        "PTNAME",
        "--point-source-attrib",
        "SOURCE",
        "--point-z-attrib",
        "Z"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "src",
      "type": "promptString",
      "description": "Source directorywhere the Mapsys files are located."
    },
    {
      "id": "destination",
      "type": "promptString",
      "description": "Destination DXF file to create.",
      "default": "${workspaceFolder}/playground/mapsys-output.dxf"
    }
  ]
}
